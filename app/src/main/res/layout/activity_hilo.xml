<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/topic5"
    tools:context=".ui.games.HiLoActivity">

    <RelativeLayout
        android:id="@+id/hiloHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/hiloExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_back_24" />

        <Button
            android:id="@+id/hiloMechanics"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/custom_round"
            android:backgroundTint="@color/bright_gray"
            android:paddingHorizontal="15dp"
            android:text="Game Mechanics"
            android:textColor="@color/black"
            android:textAllCaps="false"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/gameTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Higher or Lower"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/hiloHeader" />

    <TextView
        android:id="@+id/remainingPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:text="Points: 40"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameTitle"/>

    <GridLayout
        android:id="@+id/nineDeckOfCards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="60dp"
        app:layout_constraintTop_toBottomOf="@+id/remainingPoints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/firstCard"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/hearts_1"
            android:layout_columnWeight="1"/>

        <ImageView
            android:id="@+id/secondCard"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/card_back"
            android:layout_columnWeight="1"/>

        <ImageView
            android:id="@+id/thirdCard"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/card_back"
            android:layout_columnWeight="1"/>

        <ImageView
            android:id="@+id/fourthCard"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/card_back"
            android:layout_columnWeight="1"/>

        <ImageView
            android:id="@+id/fifthCard"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/card_back"
            android:layout_columnWeight="1"/>

        <ImageView
            android:id="@+id/sixthCard"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/card_back"
            android:layout_columnWeight="1"/>

        <ImageView
            android:id="@+id/seventhCard"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:src="@drawable/card_back"
            android:layout_columnWeight="1"/>

        <ImageView
            android:id="@+id/eighthCard"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:src="@drawable/card_back"
            android:layout_columnWeight="1"/>

        <ImageView
            android:id="@+id/ninthCard"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:src="@drawable/card_back"
            android:layout_columnWeight="1"/>

    </GridLayout>

    <LinearLayout
        android:id="@+id/betBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/nineDeckOfCards"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Your bet:"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:max="40"/>

        <TextView
            android:id="@+id/betPoints"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            tools:text="0"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="70dp"
        app:layout_constraintTop_toBottomOf="@+id/betBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/higher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="higher"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_option_button"
            android:backgroundTint="@color/blue"
            android:enabled="false"/>

        <Button
            android:id="@+id/lower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lower"
            android:textColor="@color/white"
            android:background="@drawable/custom_option_button"
            android:backgroundTint="@color/blue"
            android:enabled="false"/>

    </LinearLayout>

    <View
        android:id="@+id/hiloMaskView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RelativeLayout
        android:id="@+id/hiloMechanicsContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_anchorGravity="bottom|center">

        <TextView
            android:id="@+id/hiloMechanicsText"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center_vertical"
            android:background="@drawable/blackboard"
            android:paddingVertical="15dp"
            android:paddingStart="25dp"
            android:paddingEnd="130dp"
            android:text="If you fail to submit your answer within the time limit or provide an incorrect response,"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:id="@+id/hiloMechanicsImage"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:scaleType="fitEnd"
            android:src="@drawable/female_teacher4" />

        <Button
            android:id="@+id/cancelHiloMechanics"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_round"
            android:backgroundTint="@color/wrong"
            android:paddingHorizontal="15dp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textAllCaps="false"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>