<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".ui.tests.topicone.TopicOnePostTestActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:id="@+id/topicOnePostTestEnterPasscode"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="Enter Passcode"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>


            <EditText
                android:id="@+id/topicOnePostTestPasscode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edit_passcode"
                android:inputType="number"
                android:padding="8dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/topicOnePostTestBackCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/custom_button"
                    android:backgroundTint="@color/black"
                    android:text="Exit"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/topicOnePostTestSend"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/custom_button"
                    android:text="Send"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/topicOnePostTestInstruction"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Probability of Simple Events Post-Test"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="@string/direction"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/topicOnePostTestBack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:text="Exit"
                    android:textColor="@color/white"
                    android:background="@drawable/custom_button"
                    android:backgroundTint="@color/black"/>

                <Button
                    android:id="@+id/topicOnePostTestStart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:text="Start"
                    android:textColor="@color/white"
                    android:background="@drawable/custom_button"
                    android:backgroundTint="@color/sea_green"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/topicOnePostTest"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/topicOnePostTestItem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="1 of 10 Questions"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/topicOnePostTestTimer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:background="@drawable/custom_option_button"
                    android:backgroundTint="@color/sea_green"
                    android:text="01:00"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:drawableStart="@drawable/outline_alarm_24"/>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/topicOnePostTestProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="0"
                android:max="5"
                android:progressTint="@color/blue"/>

            <TextView
                android:id="@+id/topicOnePostTestQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="Question"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/topicOnePostTestOptA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_option_button"
                    android:text="option A"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/topicOnePostTestOptB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_option_button"
                    android:text="option B"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/topicOnePostTestOptC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_option_button"
                    android:text="option C"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/topicOnePostTestOptD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_option_button"
                    android:text="option D"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <Button
                android:id="@+id/topicOnePostTestNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="end"
                android:background="@drawable/custom_button"
                android:backgroundTint="@color/black"
                android:text="Next"
                android:textColor="@color/white"
                android:visibility="invisible"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/topicOnePostTestScore"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_centerInParent="true"
                app:lottie_rawRes="@raw/confetti"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="20dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:src="@drawable/crown"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Simple Events Post-Test Complete!"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/topicOnePostTestScoreDisp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Your Score is 0 out of 10."
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/topicOnePostTestTimeDisp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total time: 0 seconds"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/topicOnePostTestResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="View Result"
                    android:textColor="@color/white"
                    android:background="@drawable/custom_button"
                    android:backgroundTint="@color/sea_green"/>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/t1PostTestHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/t1PostTestExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:id="@+id/t1PostTestScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score 0/10"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/topicOnePostTestListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:divider="@android:color/transparent"
        android:listSelector="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t1PostTestHeader" />

</androidx.constraintlayout.widget.ConstraintLayout>